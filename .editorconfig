root = true

# 对所有文件生效
[*]
# 编码格式
charset = utf-8
# 空格形式缩进4空格
indent_style = space
indent_size = 4
# 换行符格式
end_of_line = lf
# 自动保存行尾最后一行是空行
insert_final_newline = false
# 去除结尾空格
trim_trailing_whitespace = true

# 对后缀名为 md 的文件生效
[*.md]
trim_trailing_whitespace = false

# 对后缀名为 html, js, blade.php 的文件生效
#[*.{html,js,blade.php}]
#indent_style = space
#indent_size = 2